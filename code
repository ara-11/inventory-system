<?php
// db.php
$host = 'localhost';
$user = 'root';
$pass = '';
$db = 'inventory_system_db'; // change this

$conn = new mysqli($host, $user, $pass, $db);

if ($conn->connect_error) {
    die("Connection failed: " . $conn->connect_error);
}

header('Content-Type: application/json');
?>

